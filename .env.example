# QueryMind Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================================================
# Core Configuration
# ============================================================================

# Vault path - where your markdown documents are stored
# Default: /vault (for Docker), or specify absolute path
VAULT_PATH=/path/to/your/vault

# ChromaDB collection name for vector storage
# Default: obsidian_vault_mxbai
CHROMADB_COLLECTION=obsidian_vault_mxbai

# ============================================================================
# Service URLs
# ============================================================================

# ChromaDB HTTP endpoint
# Default: http://localhost:8000
CHROMADB_URL=http://localhost:8000

# Redis cache endpoint
# Default: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Ollama LLM endpoint
# Default: http://localhost:11434
OLLAMA_URL=http://localhost:11434

# ============================================================================
# Router Configuration
# ============================================================================

# Query word count threshold for routing to DeepResearch
# Queries with more than this many words use semantic analysis
# Default: 10
ROUTER_FAST_THRESHOLD=10

# ============================================================================
# Cache Configuration
# ============================================================================

# Query result cache TTL in seconds
# How long to cache search results
# Default: 3600 (1 hour)
CACHE_TTL_QUERY=3600

# Gather phase cache TTL in seconds
# How long to cache LLM intent analysis
# Default: 300 (5 minutes)
CACHE_TTL_GATHER=300

# ============================================================================
# External APIs (Optional)
# ============================================================================

# Serper.dev API key for web search fallback
# Get your key at: https://serper.dev
# Default: none (web search disabled)
SERPER_API_KEY=your_serper_api_key_here

# Disable web search entirely (even if API key is set)
# Default: false
DISABLE_WEB_SEARCH=false

# ============================================================================
# Logging
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# ============================================================================
# Development Settings
# ============================================================================

# Enable hot-reload for agent modules (development only)
# When enabled, agent code changes are detected and reloaded automatically
# Note: Currently disabled - use `pip install -e .` for development
# HOT_RELOAD_ENABLED=false

# ============================================================================
# Example Configurations
# ============================================================================

# Docker deployment (mount vault as /vault):
# VAULT_PATH=/vault
# CHROMADB_URL=http://chromadb:8000
# REDIS_URL=redis://redis:6379
# OLLAMA_URL=http://ollama:11434

# Local development:
# VAULT_PATH=/home/user/Documents/vault
# CHROMADB_URL=http://localhost:8000
# REDIS_URL=redis://localhost:6379
# OLLAMA_URL=http://localhost:11434
# LOG_LEVEL=DEBUG

# Production:
# VAULT_PATH=/mnt/vault
# CHROMADB_URL=http://chromadb.internal:8000
# REDIS_URL=redis://redis.internal:6379
# OLLAMA_URL=http://ollama.internal:11434
# SERPER_API_KEY=your_production_key
# LOG_LEVEL=INFO
# CACHE_TTL_QUERY=7200
