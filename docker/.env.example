# QueryMind Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================================
# REQUIRED: Vault Configuration
# ============================================================
# Path to your Obsidian vault or document directory
VAULT_PATH=/home/yourusername/Documents/obsidian-vault

# ============================================================
# Service Ports (Change if conflicts exist)
# ============================================================
CHROMADB_PORT=8000
OLLAMA_PORT=11434
REDIS_PORT=6379
MCP_PORT=5173
API_PORT=8080

# ============================================================
# ChromaDB Configuration
# ============================================================
# Collection name for indexed documents
COLLECTION_NAME=obsidian_vault_mxbai

# Authentication (leave empty for no auth)
CHROMA_AUTH_PROVIDER=
CHROMA_AUTH_TOKEN=
CHROMA_AUTH_HEADER=X-Chroma-Token

# Telemetry (set to false for privacy)
CHROMA_TELEMETRY=false

# ============================================================
# Ollama Configuration
# ============================================================
# Models directory (inside container)
OLLAMA_MODELS_DIR=/root/.ollama/models

# Models to pull on first start (comma-separated)
# Recommended: mistral:7b, qwen2.5-coder:14b
OLLAMA_MODELS_TO_PULL=mistral:7b

# ============================================================
# Redis Configuration
# ============================================================
# Maximum memory for Redis (adjust based on available RAM)
REDIS_MAX_MEMORY=2gb

# ============================================================
# Agent & Router Configuration
# ============================================================
# Router threshold: queries with >N words use DeepResearch
ROUTER_FAST_THRESHOLD=10

# Cache TTLs (seconds)
CACHE_TTL_GATHER=300      # 5 minutes for gather cache
CACHE_TTL_QUERY=3600      # 1 hour for query cache

# ============================================================
# External Services (Optional)
# ============================================================
# Serper.dev API key for web search (free tier: 100 queries/month)
# Get your key at: https://serper.dev
SERPER_API_KEY=

# ============================================================
# API Configuration (Optional - for REST API)
# ============================================================
# Number of API workers (CPU cores * 2 recommended)
API_WORKERS=4

# API authentication key (leave empty for no auth)
API_KEY=

# ============================================================
# Logging
# ============================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================
# Development Options
# ============================================================
# Enable auto-reload for code changes (dev mode only)
DEV_MODE=false

# Enable verbose logging for debugging
DEBUG=false
